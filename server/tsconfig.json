{
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "esModuleInterop": true,
      "removeComments": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "build",
      "typeRoots": ["./node_modules/@types"],
      "paths": {
        "*": [
          "./node_modules/*" 
        ]
      },
      "sourceMap": false,
      "strict": true,
      "target": "es6",
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "../node_modules",
      "tests",
      "**/*.tests.ts",
      "build"
    ]
  }